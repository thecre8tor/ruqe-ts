{
  "name": "ruqe",
  "version": "0.1.1",
  "description": "Ruqe brings Result-Oriented Programming to TypeScript/JavaScript with Result, and Option types for predictable error handling",
  "packageManager": "pnpm@9.15.4",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm run build",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "result",
    "option",
    "monad",
    "functional",
    "error-handling",
    "typescript",
    "rust",
    "pattern-matching"
  ],
  "author": "Alexander Nitiola",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thecre8tor/ruqe-ts.git"
  },
  "bugs": {
    "url": "https://github.com/thecre8tor/ruqe-ts/issues"
  },
  "homepage": "https://github.com/thecre8tor/ruqe-ts#readme",
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "prettier": "^3.1.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
